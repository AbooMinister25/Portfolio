.header
    margin: 12rem 1rem 0 1rem
    height: 100vh

    @media (min-width: 768px)
        margin-left: 15%
        margin-top: 14rem

.header-title
    font-size: 3rem
    line-height: 1
    color: $blue
    font-weight: regular

    @media (min-width: 768px)
        font-size: 4.5rem
        line-height: 1

.header-text
    margin-top: 0
    margin-bottom: 0

.bio
    margin: auto
    font-size: 1.875rem
    line-height: 2.25rem
    color: $grey5
    margin-top: 3rem

.highlight
    color: $red

.social-icon
    height: 2rem
    width: 2rem
    margin-right: 1rem
    margin-top: 1rem

.social-github
    fill: $magenta

.social-linkedin
    fill: $red

.social-twitter
    fill: $green

.social-instagram
    fill: $orange

.hvr-float
    -webkit-transform: perspective(1px) translateZ(0)
    transform: perspective(1px) translateZ(0)
    box-shadow: 0 0 1px rgba(0, 0, 0, 0)
    -webkit-transition-duration: 0.3s
    transition-duration: 0.3s
    -webkit-transition-property: transform
    transition-property: transform
    -webkit-transition-timing-function: ease-out
    transition-timing-function: ease-out

.hvr-float:hover,
.hvr-float:focus,
.hvr-float:active
    -webkit-transform: translateY(-8px)
    transform: translateY(-8px)
